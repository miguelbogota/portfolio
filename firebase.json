{
  "database": {
    "rules": "firerules/database.rules.json"
  },
  "firestore": {
    "rules": "firerules/firestore.rules",
    "indexes": "firerules/firestore.indexes.json"
  },
  "hosting": {
    "public": "dist/portfolio",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "firerules/storage.rules"
  }
}
